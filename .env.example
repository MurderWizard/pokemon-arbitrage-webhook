# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
DB_URL=postgresql://flip:secure_password@localhost:5433/pokemon_arbitrage

# Telegram Bot
TG_TOKEN=your_telegram_bot_token_here
TG_ADMIN_ID=your_telegram_user_id_here

# TCGplayer API
TCG_CLIENT_ID=your_tcgplayer_client_id
TCG_CLIENT_SECRET=your_tcgplayer_client_secret
TCG_ACCESS_TOKEN=your_tcgplayer_access_token

# eBay API
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_USER_TOKEN=your_ebay_user_token
EBAY_ENVIRONMENT=sandbox  # or production

# COMC API
COMC_USERNAME=your_comc_username
COMC_PASSWORD=your_comc_password
COMC_MAILBOX_ADDRESS=your_comc_mailbox_address

# PSA Vault
PSA_VAULT_USERNAME=your_psa_vault_username
PSA_VAULT_PASSWORD=your_psa_vault_password

# PriceCharting
PRICECHARTING_API_KEY=your_pricecharting_api_key

# Redis
REDIS_URL=redis://localhost:6380

# Trading Parameters
STARTING_BANKROLL=1000
MAX_POSITION_PERCENT=5  # Max 5% of bankroll per card
DEAL_THRESHOLD=0.75  # Buy if price <= 75% of market
MIN_PROFIT_MARGIN=0.25  # Minimum 25% profit margin
RAW_AGING_DAYS=45  # Markdown raw cards after 45 days
SLAB_AGING_DAYS=30  # Markdown slabs after 30 days

# Risk Controls
ENABLE_AUTO_BUY=false  # Set to true to enable automatic purchases
DAILY_SPEND_LIMIT=200  # Max daily spend limit
STOP_LOSS_THRESHOLD=0.6  # Auto-auction at 60% of market if aged >90 days

# Discord Integration (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_DEAL_CHANNELS=channel_id_1,channel_id_2,channel_id_3

# Enhanced Auto-Buy Settings (⚠️ IMPORTANT: Test thoroughly before enabling)
AUTO_BUY_ENABLED=false
MAX_AUTO_BUY_AMOUNT=200.0
DAILY_AUTO_BUY_LIMIT=500.0
MIN_AUTO_BUY_MARGIN=0.35
AUTO_BUY_CONFIDENCE_THRESHOLD=0.8

# Compliance
BUSINESS_NAME=Your Business Name
SALES_TAX_RATE=0.08  # Alabama sales tax rate
TAX_YEAR=2025
